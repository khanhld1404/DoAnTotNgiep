@using Shopping_Tutorial.Models
@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Đơn hàng";
}
<h2>Danh sách đơn hàng</h2>
<table class="table" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mã đơn</th>
            <th scope="col">Người đặt</th>
            <th scope="col">Ngày đặt đơn</th>
            <th scope="col">Trạng thái đơn</th>
            <th scope="col">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.OrderCode</th>
                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else if (item.Status == 0)
                    {
                        <span class="text text-warning">Đơn hàng đã xử lý</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đã huỷ</span>
                    }
                </td>
                <td>
                    <a asp-action="ViewOrder" class="btn btn-warning btn-sm" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Chi tiết</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
